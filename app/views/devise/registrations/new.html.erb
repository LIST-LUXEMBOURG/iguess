<h2>Sign up</h2>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :username, :required => true, :autofocus => true %>
    <%= f.input :email, :required => true %>
    <%= f.input :password, :required => true %>
    <%= f.input :password_confirmation, :required => true, :label=>"Confirm" %>

    <%= f.input :first_name, :required => true %>
    <%= f.input :last_name, :required => true %>

    <%= f.input :city_id, :label => "City",           :collection => @cities.map{ |c| [c.name, c.id] }, 
                :include_blank => "Select your city", :required => true %>
    
  </div>

  <div class="form-actions">
    <label>&nbsp;</label><%= f.button :submit, "Sign up" %>
  </div>

  <div class="shared_links">
    <label>&nbsp;</label><%= render "devise/shared/links" %>
  </div>

<% end %>

